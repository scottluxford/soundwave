{
  "name": "Soundwave",
  "version": "2.0.0",
  "description": "Soundwave is a menubar app housing a Slackbot interfacing with Spotify via AppleScript",
  "dependencies": {
    "botkit": "^0.7.4",
    "botbuilder-adapter-slack": "^1.0.3",
    "menubar": "^6.0.5",
    "node-spotify-api": "^1.1.1",
    "q": "^1.5.1",
    "request": "^2.88.0",
    "spotify-node-applescript": "^1.1.1"
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-packager": "^13.1.1"
  },
  "main": "soundwave.js",
  "scripts": {
    "build": "electron-packager . Soundwave --out=./dist --platform=darwin --arch=x64 --icon=assets/Icon.icns --overwrite --ignore=^.*electron-packager.*$",
    "start": "electron . -dev"
  }
}
